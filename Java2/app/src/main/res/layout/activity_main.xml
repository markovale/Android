<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="16dp"
        android:text="Količina:" />
    <!-- Ova naredba služi za prikaz teksta količina-->

    <Button
        android:id="@+id/dugme"
        android:textSize="16dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:text="+"
        android:onClick="increment"/>
    <!-- Ova naredba služi za za dugme, kada se dugme pritisne ispiše(doda) se 1-->



    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        />
    <!-- Ova naredba služi da se prikaže koliko je puta pritisnuto dugme
    iz prethodne naredbe, ili koliko kave želimo naručitit -->

    <Button
        android:id="@+id/dugme"
        android:textSize="16dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:text="-"
        android:onClick="decrement"/>
    <!-- Ova naredba služi za za dugme, kada se dugme pritisne oduzme se 1
    Npr: Slucajno smo stisnuli vise puta gumb za dodavanje, s ovim gumbom za
    oduzimanje mozemo smanjiti-->

    <TextView
        android:id="@+id/CIJENA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="16dp"
        android:text="Cijena:" />
    <!-- Ova naredba služi za podnaslov "Cijena"-->

    <TextView
        android:id="@+id/price_text_view"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        />
    <!-- Ova naredba služi za ispis cijene naručenih kava-->

    <Button
        android:id="@+id/dugme"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Naruči"
        android:onClick="submitOrder"/>
    <!-- Ova naredba služi za dugme, koje služi da se izvrše sve naredbe koje
    smo zadali-->
</LinearLayout>